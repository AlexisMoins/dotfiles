#!/usr/bin/env zsh
# Author: Alexis Moins
# Creation: 29 nov 2021

# List of directries that MUST be created
directories=( 
    "${HOME}/.zsh/.cache"
    "${HOME}/.vim/.cache"
    "${HOME}/.vim/plugged"
)

# Create directories
for directory in ${directories}; do
    [[ ! -d "${directory}" ]] && \mkdir -pv "${directory}"; done

# Install formulae / casks
if brew bundle install --no-lock; then
    # Symlink configuration
    stow -R .
fi

