# Change cursor shape based on vi mode
# Author: Alexis Moins
# Creation: 17 janvier 2020
# vim: ft=zsh syn=zsh

block="\e[1 q"
underscore="\e[3 q"

case ${KEYMAP} in
    vicmd) 
        # Block cursor
        printf ${block} ;;
    viins|main) 
        # Underscore cursor
        printf ${underscore} ;;
esac

# Refresh prompt
zle reset-prompt
