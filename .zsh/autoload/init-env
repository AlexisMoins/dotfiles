# vim: ft=zsh syn=zsh

# Source the configuration files of the plugin directory
for file in "${ZDOTDIR}/plugin"/*(^D); do
    source "${file}"; done

# Check wether the alias run-help is present
if (( ${+aliases[run-help]} )); then
    # Remove the alias
    unalias run-help
    # Create a better alias
    autoload -Uz run-help && alias help='run-help'
fi

