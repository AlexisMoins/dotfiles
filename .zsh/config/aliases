# Author: Alexis Moins
# Creation: 14 mars 2020
# vim: ft=zsh syn=zsh

# {{{ Files

# Edit `.zshrc`
alias zshrc="vim ${ZDOTDIR}/.zshrc"

# Edit `.zshenv`
alias zshenv="vim ${ZDOTDIR}/../.zshenv"

# Edit `vimrc`
alias vimrc="vim ${VIMDOTDIR}/vimrc"

# Edit `aliases`
alias aliasrc="vim ${ZDOTDIR}/config/aliases"

# }}}

# {{{ Utilities

# Display the path in a pretty format
alias path="echo '${PATH//:/\n}'"

# Display the fpath in a pretty format
alias fpath="echo '${FPATH//:/\n}'"

# Met à jour homebrew et les paquets
alias daily="brew update; brew upgrade; brew cleanup"

# }}}

# {{{ Commands

# Liste les éléments non cachés, avec de la couleur (G)
alias ls='ls -G'

# Liste y compris les fichiers cachés (A)
alias la='ls -A'

# Liste en format long (l), en format compréhensible (h)
alias ll='ls -Alh'

# Utilise la couleur avec grep
alias grep="grep --colour=auto"

# }}}

# Homebrew version of the Java programing language
alias bottle-java="$(brew --prefix openjdk)/bin/java"

# Homebrew version of the Javac compiler
alias bottle-javac="$(brew --prefix openjdk)/bin/javac"

#
alias dotfiles='brew bundle --no-lock --file=".Brewfile"'
