# vim: ft=make syn=make
# Define targets not referencing files
.PHONY: run clean

# Name of the compiled file
target = main

# Directory containing the compiled objects
directory = log

# Compile the .tex file into a pdf file
$(target).pdf: $(directory)
	pdflatex --output-directory=$(directory) $(target).tex

# Create the directory containing log info
$(directory):
	mkdir $(directory)

# Open the newly compiled pdf file
run: $(target).pdf
	open $(directory)/$(target).pdf

# Empty the directory containing log info
clean: 
	rm -vf $(directory)/*

